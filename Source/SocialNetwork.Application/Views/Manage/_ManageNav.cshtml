@{
    var hasExternalLogins = (await this.Context.SignInManager().GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills nav-stacked">
    <li class="@this.ViewContext.IndexNavClass()"><a asp-action="Index">Profile</a></li>
    <li class="@this.ViewContext.ChangePasswordNavClass()"><a asp-action="ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li class="@this.ViewContext.ExternalLoginsNavClass()"><a asp-action="ExternalLogins">External logins</a></li>
    }
    <li class="@this.ViewContext.TwoFactorAuthenticationNavClass()"><a asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
</ul>